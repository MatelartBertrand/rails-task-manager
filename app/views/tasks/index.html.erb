<div class="container">
  <h1 class="text-center">My To do list</h1>
  <%= link_to "Add task", new_task_path, class: "btn btn-default" %>

  <% @task.each do |task| %>
    <div class="message">
      <div class="message-name">
        <p><strong><%= task.title %></strong></p>
      </div>
      <div class="message-body">
        <p><%= task.detail %></p>
      </div>
        <%= link_to "edit", edit_task_path(task), class: "btn btn-default" %>
        <%= link_to "delete", task_path(task), method: :delete,  class: "btn btn-default" %>
    </div>
  <% end %>
</div>
